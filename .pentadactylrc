set defsearch=s
colorscheme solarized-light

" hide tabbar
set showtabline=never
nmap l -ex :set showtabline!=never,always

" start in fullscreen mode
au Fullscreen .* :set guioptions+=s
nmap s -ex :set guioptions!=s

" font sizes
" status line
hi FontFixed -append font-size: 12pt !important;
" hints
hi Hint -append font-size: 12pt !important;

" some groups -- such as `CmdLine` and `StatusLine` -- are linked by default
hi -append -link FontFixed CompItem
hi -append -link FontFixed CompTitle

" use characters for hints
set hintkeys=ashtneoicl

" disable smooth scroll
set scrollsteps=1
set scrolltime=0

" Show pattern matches as you type,
set incfind
