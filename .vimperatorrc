colorscheme solarized-light

" deactivate navigation bar
set gui=nonavigation,notabs

" don't focus input
set focuscontent

" font sizes
" status line
hi Normal -append font-size: 12pt !important;
" hints
hi Hint -append font-size: 12pt !important;

" use characters for hints
set hintchars=ashtneoicl

" toggle tabs
nmap l :set toolbars=invtabs<CR>

" toggle navbar
nmap k :set toolbars=invnavigation<CR>

" show in reader view
nmap v :execute "open about:reader?url=" + content.location.href<CR>

" scroll faster
:noremap j 3j
:noremap k 3k
